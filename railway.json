{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python main.py"
  },
  "cron": [
    {
      "command": "python main.py --schedule=tier1",
      "schedule": "0 5 * * *",
      "name": "tier1-no-time-matches"
    },
    {
      "command": "python main.py --schedule=tier2",
      "schedule": "0 9 * * *",
      "name": "tier2-daytime-matches"
    },
    {
      "command": "python main.py --schedule=tier3", 
      "schedule": "0 13 * * *",
      "name": "tier3-evening-matches"
    }
  ]
}